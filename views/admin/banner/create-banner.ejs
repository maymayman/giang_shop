  <!-- Content -->
  <div class="content">
    <!------ message ---->
    <%if(errorMessage){%>
    <div class="col-lg-12 alert alert-danger text-center">
      <span class="error-message"><%= errorMessage%></span>
    </div>
    <%}%>
    <!-- Animated -->
    <form id="formBanner" action="./create" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12" style="padding: 3px; margin-right: auto; margin-left: auto">
          <div class="animated fadeIn">
            <div class="row">
              <div class="col-lg-6" style="margin-right: auto; margin-left: auto">
                <div class="card">
                  <div class="card-body card-block">
                    <div class="row form-group">
                      <div class="col col-md-12">
                        <label for="image1">Image (require: 1200 < width and not greater than
                          5MB)</label>
                      </div>
                      <div class="col-12 col-md-12">
                        <div class="row">
                          <div class=" col-12 col-md-12">
                            <img id="blah"
                                 src="data:image/png;base64,"
                                 width="100%;" alt="your image"/>

                            <label class="btn btn-default btn-file no-padding"
                                   style="background-color: cadetblue; width: 100%; margin-top: 10px;">
                              <span class="new-button-color">chose imange</span>

                              <input class="btn btn-default btn-file" type="file" id="image" name="image">
                            </label>
                          </div>
                        </div>
                      </div>
                    </div>


                  </div>
                </div>
              </div>

              <div class="col-lg-6" style="margin-right: auto; margin-left: auto">
                <div class="card">
                  <div class="card-body card-block">
                    <div class="row form-group">
                      <div class="col col-md-12">
                        <label for="title">Title</label>
                      </div>
                      <div class="col-12 col-md-12 mb-2">
                        <input type="text" id="title" name="title" class="form-control">
                      </div>
                      <div class="col col-md-12">
                        <label for="position">Position</label>
                      </div>
                      <div class="col-12 col-md-12 mb-2">
                        <input type="number" id="position" name="position" class="form-control">
                      </div>
                      <div class="col col-md-12">
                        <label for="link">Link</label>
                      </div>
                      <div class="col-12 col-md-12 mb-2">
                        <input type="text" id="link" name="link" class="form-control">
                      </div>
                      <div class="col col-md-12">
                        <label for="status">Status</label>
                      </div>
                      <div class="col-12 col-md-12 mb-2">
                        <select id="status" name="status" class="form-control">
                          <option value="ACTIVE">ACTIVE</option>
                          <option value="INACTIVE">INACTIVE</option>
                        </select>
                      </div>
                      <div class="col col-md-12">
                        <label >Description</label>
                      </div>
                      <div class="col-12 col-md-12">
                        <!--<input type="text" id="description" name="description" class="form-control">-->
                        <textarea id="summernote1" name="description" width="100px"></textarea>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>


        <div class="col-12 col-md-12 mt-5">
          <button type="submit" onclick="submit()" class="btn btn-sm btn-primary float-right">
            <i class="fa fa-dot-circle-o"></i> Submit
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
