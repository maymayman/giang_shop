<body>
    <!-- Left Panel -->
    
    <aside id="left-panel" class="left-panel">
        <%- include('../common/navbar', {}); %>
    </aside>

    <!-- /#left-panel -->
    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <!-- Header-->
        <%- include('../common/header', {}); %>
        <!-- /#header -->
        <!-- Content -->
        <div class="breadcrumbs">
            <div class="breadcrumbs-inner">
                <div class="row m-0">
                    <div class="col-sm-4">
                        <div class="page-header float-left">
                            <div class="page-title">
                                <h1>Dashboard</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                <ol class="breadcrumb text-right">
                                    <button type="button" onclick="location.href = './create'" class="btn btn-primary btn-sm">Add New Banner</button>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <!-- Animated -->
            <div class="animated fadeIn">
                <!-- Widgets  -->
                <div class="row">
                    <%if (listBanner && listBanner.length > 0){ %>
                        <%listBanner.forEach(function (banner) { %>
                    <div class="col-md-4">
                        <div class="card">
                            <img id="image" class="card-img-top" src="<%= domain + banner.image %>" alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title mb-3"><%= banner.title %></h4>
                                <p class="card-text"><%= banner.status %></p>
                                <p class="card-text"><%= banner.link %></p>
                                <p class="card-text"><%- banner.description %></p>
                                <button type="button" onclick="location.href = './list/<%= banner.objectId %>'" class="btn btn-outline-success btn-sm">Apply</button>
                                <!--<button type="button" onclick="location.href = './banner/<%= banner.objectId %>'" class="btn btn-outline-success btn-sm float-right">Delete</button>-->
                            </div>
                        </div>
                    </div>
                        <%})%>
                    <%}%>

                </div>
                <!-- /Widgets -->
            <!-- /#add-category -->
            </div>
            <!-- .animated -->
        </div>
        <!-- /.content -->
        <div class="clearfix"></div>
        <!-- Footer -->
        <%- include('../common/footer', {}); %>
        <!-- /.site-footer -->
    </div>
