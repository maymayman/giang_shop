<div class="slider-area">
    <div class="slider-active owl-carousel nav-style-1">
        <%if(banners && banners.length){%>
            <% banners.forEach(function (banner) {%>
                <div class="single-slider-2 slider-height-2 d-flex align-items-center bg-img"
                     style="<%= `background-image:url(${domain}${banner.image ? banner.image : 'img/slider/slider_women.jpg'})` ;%>">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-6 col-lg-7 col-md-8 col-12 ml-auto" style="margin-left: unset!important;">
                                <div class="slider-content-3 slider-animated-1 text-center"  style="<%= banner.color %>">
                                    <h3 class="animated black <%= banner.color %>"><%= banner.title %></h3>
                                    <h1 class="animated <%= banner.color %>"><%= banner.slogan %></h1>
                                    <p class="animated-<%= banner.color %>"><%= banner.description %></p>
                                    <div class="slider-btn btn-hover-<%=banner.color %>">
                                        <a class="animated <%= banner.color %>" href=<%= domain + banner.link;%>>SHOPPING NOW</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <%})%>

            <%}else {%>
                <div class="single-slider-2 slider-height-2 d-flex align-items-center bg-img"
                     style="<%= `background-image:url(${domain}img/slider/slider_women.jpg)` ;%>">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-6 col-lg-7 col-md-8 col-12 ml-auto" style="margin-left: unset!important;">
                                <div class="slider-content-3 slider-animated-1 text-center">
                                    <h3 class="animated black">SUMER FREE</h3>
                                    <h1 class="animated">Women Fashion</h1>
                                    <p class="animated">Enjoy Your Life</p>
                                    <div class="slider-btn btn-hover">
                                        <a class="animated" href=<%= domain + 'product?menu=' + menus[0].objectId;%>>SHOPPING NOW</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        <div class="single-slider-2 slider-height-2 d-flex align-items-center bg-img"
            style="<%= `background-image:url(${domain}img/slider/image_1.png)` ;%>">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-7 col-md-8 col-12 ml-auto" style="margin-left: unset!important;">
                        <div class="slider-content-3 slider-animated-1 text-center">
                            <h3 class="animated white" style="color: white;">Stylish</h3>
                            <h1 class="animated" style="color: white;">Male Clothes</h1>
                            <p class="animated" style="color: white;">30% off Summer Vacation</p>
                            <div class="slider-btn btn-hover">
                                <a class="animated" style="color: white;" href=<%= domain + 'product?menu=' + menus[0].objectId;%> >SHOPPING NOW</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="single-slider-2 slider-height-2 d-flex align-items-center bg-img"
            style="<%= `background-image:url(${domain}img/slider/image_3.png)` ;%>">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-7 col-md-8 col-12 ml-auto" style="margin-left: unset!important;">
                        <div class="slider-content-3 slider-animated-1 text-center">
                            <h3 class="animated violet">Stylish</h3>
                            <h1 class="animated violet">Male Clothes</h1>
                            <p class="animated violet">30% off Summer Vacation</p>
                            <div class="slider-btn btn-hover">
                                <a class="animated violet" href=<%= domain + 'product?menu=' + menus[0].objectId;%>>SHOPPING NOW</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <%}%>
    </div>
</div>